<!-- chessmate_description/urdf/scara_robot.urdf.xacro -->
<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="chessmate_scara">

  <!-- Robot Parameters -->
  <xacro:property name="link1_length" value="0.202" />
  <xacro:property name="link2_length" value="0.190" />
  <xacro:property name="base_height" value="0.1" />

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="${base_height}"/>
      </geometry>
      <material name="base_color">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="${base_height}"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Joint 1 (Base rotation) -->
  <joint name="base_joint" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 ${base_height/2}" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="2.0"/>
  </joint>

  <!-- Link 1 -->
  <link name="link1">
    <visual>
      <origin xyz="${link1_length/2} 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${link1_length} 0.05 0.05"/>
      </geometry>
      <material name="link_color">
        <color rgba="0.8 0.2 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="${link1_length/2} 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${link1_length} 0.05 0.05"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="${link1_length/2} 0 0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Joint 2 (Shoulder) -->
  <joint name="shoulder_joint" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="${link1_length} 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="2.0"/>
  </joint>

  <!-- Link 2 -->
  <link name="link2">
    <visual>
      <origin xyz="${link2_length/2} 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${link2_length} 0.04 0.04"/>
      </geometry>
      <material name="link_color">
        <color rgba="0.2 0.8 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="${link2_length/2} 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="${link2_length} 0.04 0.04"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="${link2_length/2} 0 0" rpy="0 0 0"/>
      <mass value="0.5"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link>

  <!-- Z-axis joint (vertical) -->
  <joint name="z_joint" type="prismatic">
    <parent link="link2"/>
    <child link="end_effector"/>
    <origin xyz="${link2_length} 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="0.05" effort="5" velocity="0.1"/>
  </joint>

  <!-- End Effector -->
  <link name="end_effector">
    <visual>
      <geometry>
        <box size="0.03 0.03 0.02"/>
      </geometry>
      <material name="gripper_color">
        <color rgba="0.2 0.2 0.8 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.03 0.03 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

</robot>
